class Solution {

    // O(long N);
    // space O(1)
public:
 
    bool isPerfectSquare(int num) {
        int l=0; int r=num/2;
        if(num==1)return true;
     while(l<=r){
        long long mid=(l+r)/2; 
        if(mid*mid==num){
            return true;
        }
        else if(mid*mid<num){
            l=mid+1;
        }
        else r=mid-1;
     }
     return false;
    
    }
};
